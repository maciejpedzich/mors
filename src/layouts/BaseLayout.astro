---
import '@fontsource/titillium-web/400.css';
import '@fontsource/titillium-web/700.css';

import Navbar from '../components/ui/Navbar.astro';
import Footer from '../components/ui/Footer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;

const titleToUse =
  title === 'Home'
    ? "Mac's Online Racing Stats"
    : `${title} - Mac's Online Racing Stats`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Visualisations of data collected during Mac's and his friends' online racing antics"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{titleToUse}</title>
    <script>
      if (
        localStorage.getItem('color-theme') === 'dark' ||
        (!('color-theme' in localStorage) &&
          window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
  </head>
  <body class="bg-gray-100 dark:bg-gray-900 dark:text-white">
    <header>
      <Navbar />
    </header>
    <main>
      <slot />
    </main>
    <Footer />
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.7.0/flowbite.min.js"
    ></script>
  </body>
</html>
